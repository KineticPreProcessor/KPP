#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: Set here the F90 compiler and options
#       Pedefined compilers: INTEL, PGF, HPUX, LAHEY
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

# Pick a default compiler if not supplied
ifndef COMPILER
#COMPILER = LAHEY
#COMPILER = INTEL
#COMPILER = PGF
#COMPILER = HPUX
COMPILER = GFORTRAN
endif

FC_LAHEY   = lf95
# More aggressive for production runs:
#FOPT_LAHEY = -Cpp --pca -O
# More checking for debugging:
FOPT_LAHEY = -Cpp --chk a,e,s,u --pca --ap -O0 -g --trap --trace --chkglobal

FC_INTEL   = ifort
# More aggressive for production runs:
#FOPT_INTEL = -cpp -O -fp-model precise -pc80 -prec_div
# More checking for debugging:
FOPT_INTEL = -cpp -O0 -fp-model strict -implicitnone -ftrapuv \
              -debug all -check all -warn all -g

FC_PGF     = pgf90
# More aggressive for production runs:
FOPT_PGF   = -Mpreprocess -O -fast -pc 80 -Kieee
# More checking for debugging:
#FOPT_PGF   = -Mpreprocess -O0 -Mbounds -Mchkfpstk -Mchkptr -Mchkstk \
#             -Ktrap=fp -pc 80 -Kieee

FC_HPUX    = f90
FOPT_HPUX  = -O -u +Oall +check=on

FC_GFORTRAN     = gfortran
FOPT_GFORTRAN   = -cpp -O -g

# define FULL_ALGEBRA for non-sparse integration
FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) # -DFULL_ALGEBRA

LIBS =
#LIBS = -llapack -lblas

# Command to create Matlab mex gateway routines
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

GENSRC = ros_minver_Precision.F90  \
	 ros_minver_Parameters.F90     \
	 ros_minver_Global.F90

GENOBJ = ros_minver_Precision.o    \
	 ros_minver_Parameters.o       \
	 ros_minver_Global.o

FUNSRC = ros_minver_Function.F90
FUNOBJ = ros_minver_Function.o

JACSRC = ros_minver_JacobianSP.F90  ros_minver_Jacobian.F90
JACOBJ = ros_minver_JacobianSP.o    ros_minver_Jacobian.o

HESSRC = ros_minver_HessianSP.F90   ros_minver_Hessian.F90
HESOBJ = ros_minver_HessianSP.o     ros_minver_Hessian.o

STMSRC = ros_minver_StoichiomSP.F90 ros_minver_Stoichiom.F90
STMOBJ = ros_minver_StoichiomSP.o   ros_minver_Stoichiom.o

UTLSRC = ros_minver_Rates.F90 ros_minver_Util.F90 ros_minver_Monitor.F90
UTLOBJ = ros_minver_Rates.o   ros_minver_Util.o   ros_minver_Monitor.o

LASRC  = ros_minver_LinearAlgebra.F90
LAOBJ  = ros_minver_LinearAlgebra.o

STOCHSRC = ros_minver_Stochastic.F90
STOCHOBJ = ros_minver_Stochastic.o

MAINSRC = ros_minver_Main.F90   ros_minver_Initialize.F90   ros_minver_Integrator.F90 ros_minver_Model.F90
MAINOBJ = ros_minver_Main.o     ros_minver_Initialize.o     ros_minver_Integrator.o   ros_minver_Model.o

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       objects needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
ALLOBJ = $(GENOBJ) $(FUNOBJ) $(JACOBJ) $(HESOBJ) $(STMOBJ) \
	 $(UTLOBJ) $(LAOBJ)

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       executables needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
all:    exe

exe:	$(ALLOBJ) $(MAINOBJ)
	$(FC) $(FOPT) $(ALLOBJ) $(MAINOBJ) $(LIBS) -o ros_minver.exe

stochastic:$(ALLOBJ) $(STOCHOBJ) $(MAINOBJ)
	$(FC) $(FOPT) $(ALLOBJ) $(STOCHOBJ) $(MAINOBJ) $(LIBS) \
	-o ros_minver_stochastic.exe

mex:    $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O ros_minver_mex_Fun.F90     $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O ros_minver_mex_Jac_SP.F90  $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O ros_minver_mex_Hessian.F90 $(ALLOBJ)

clean:
	rm -f ros_minver*.o ros_minver*.mod \
	ros_minver*.dat ros_minver.exe ros_minver*.mexglx \
	ros_minver.map

distclean:
	rm -f ros_minver*.o ros_minver*.mod \
	ros_minver*.dat ros_minver*.exe ros_minver.map \
	ros_minver_*.f90 ros_minver_*.F90 ros_minver_*.mexglx \
	results*.m 

ros_minver_Precision.o: ros_minver_Precision.F90
	$(FC) $(FOPT) -c $<

ros_minver_Parameters.o: ros_minver_Parameters.F90 \
	            ros_minver_Precision.o
	$(FC) $(FOPT) -c $<

ros_minver_Monitor.o: ros_minver_Monitor.F90 \
	             ros_minver_Precision.o
	$(FC) $(FOPT) -c $<

ros_minver_Global.o: ros_minver_Global.F90 \
	            ros_minver_Parameters.o ros_minver_Precision.o
	$(FC) $(FOPT) -c $<

ros_minver_Initialize.o: ros_minver_Initialize.F90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_Function.o: ros_minver_Function.F90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_Stochastic.o: ros_minver_Stochastic.F90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_JacobianSP.o: ros_minver_JacobianSP.F90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_Jacobian.o: ros_minver_Jacobian.F90  $(GENOBJ) ros_minver_JacobianSP.o
	$(FC) $(FOPT) -c $<

ros_minver_LinearAlgebra.o: ros_minver_LinearAlgebra.F90 $(GENOBJ) ros_minver_JacobianSP.o
	$(FC) $(FOPT) -c $<

ros_minver_Rates.o: ros_minver_Rates.F90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_HessianSP.o: ros_minver_HessianSP.F90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_Hessian.o:  ros_minver_Hessian.F90 $(GENOBJ) ros_minver_HessianSP.o
	$(FC) $(FOPT) -c $<

ros_minver_StoichiomSP.o: ros_minver_StoichiomSP.F90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

ros_minver_Stoichiom.o: ros_minver_Stoichiom.F90  $(GENOBJ) ros_minver_StoichiomSP.o
	$(FC) $(FOPT) -c $<

ros_minver_Util.o: ros_minver_Util.F90  $(GENOBJ) ros_minver_Monitor.o
	$(FC) $(FOPT) -c $<

ros_minver_Main.o: ros_minver_Main.F90  $(ALLOBJ) ros_minver_Initialize.o ros_minver_Model.o ros_minver_Integrator.o
	$(FC) $(FOPT) -c $<

ros_minver_Model.o: ros_minver_Model.F90  $(ALLOBJ) ros_minver_Integrator.o
	$(FC) $(FOPT) -c $<

ros_minver_Integrator.o: ros_minver_Integrator.F90  $(ALLOBJ)
	$(FC) $(FOPT) -c $<
